<UserControl x:Class="Dopamine.Common.Presentation.Views.EqualizerIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dopamine.Common.Presentation.Views"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="30"
             Width="30" Height="30">
    
    <Canvas Width="30" Height="30">
        <!-- Vertical lines -->
        <Line Stroke="{DynamicResource RG_ForegroundBrush}" StrokeThickness="1" X1="8.5" X2="8.5" Y1="8" Y2="22"/>
        <Line Stroke="{DynamicResource RG_ForegroundBrush}" StrokeThickness="1" X1="15.5" X2="15.5" Y1="8" Y2="22"/>
        <Line Stroke="{DynamicResource RG_ForegroundBrush}" StrokeThickness="1" X1="22.5" X2="22.5" Y1="8" Y2="22"/>
        <!-- Circles -->
        <Ellipse Width="4" Height="4" Fill="{DynamicResource RG_ForegroundBrush}" Canvas.Left="6.5" Canvas.Top="11"/>
        <Ellipse Width="4" Height="4" Fill="{DynamicResource RG_ForegroundBrush}" Canvas.Left="13.5" Canvas.Top="15"/>
        <Ellipse Width="4" Height="4" Fill="{DynamicResource RG_ForegroundBrush}" Canvas.Left="20.5" Canvas.Top="12"/>
    </Canvas>
</UserControl>

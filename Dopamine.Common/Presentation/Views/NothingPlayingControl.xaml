<UserControl x:Class="Dopamine.Common.Presentation.Views.NothingPlayingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:commonviews="clr-namespace:Dopamine.Common.Presentation.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             xmlns:base="clr-namespace:Dopamine.Common.Base"
             xmlns:prismMvvm="clr-namespace:Prism.Mvvm;assembly=Prism.Wpf"
             prismMvvm:ViewModelLocator.AutoWireViewModel="True">

    <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" Text="{DynamicResource Language_Nothing_Is_Playing}" FontSize="{x:Static base:Constants.MediumBackgroundFontSize}" FontWeight="Light" Foreground="{DynamicResource RG_ForegroundBrush}"/>
        <StackPanel HorizontalAlignment="Center" Margin="30">
            <commonviews:PlayAllControl Margin="5" HorizontalAlignment="Left"/>
            <commonviews:ShuffleAllControl Margin="5" HorizontalAlignment="Left"/>
        </StackPanel>
    </DockPanel>
</UserControl>

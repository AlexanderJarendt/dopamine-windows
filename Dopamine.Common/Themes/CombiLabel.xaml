<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Dopamine.Common.Controls">

    <Style x:Key="{x:Type controls:CombiLabel}" TargetType="{x:Type controls:CombiLabel}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:CombiLabel}">
                    <StackPanel Orientation="Horizontal">
                        <Label Margin="0" Padding="0" FontStyle="{TemplateBinding FontStyle}" FontWeight="{TemplateBinding FontWeight}" FontSize="{TemplateBinding FontSize}" Content="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}"/>
                        <Label Margin="1,0,0,0" Padding="0" FontStyle="{TemplateBinding FontStyle2}" Style="{TemplateBinding Style}" FontWeight="{TemplateBinding FontWeight2}" FontSize="{TemplateBinding FontSize2}" Content="{TemplateBinding Content2}" Foreground="{TemplateBinding Foreground2}"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>

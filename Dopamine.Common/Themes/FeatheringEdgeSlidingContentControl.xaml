<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Dopamine.Common.Controls"
                    xmlns:effects="clr-namespace:Dopamine.Common.Presentation.Effects">

    <Style x:Key="{x:Type controls:FeatheringEdgeSlidingContentControl}" TargetType="{x:Type controls:FeatheringEdgeSlidingContentControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:FeatheringEdgeSlidingContentControl}">
                    <Grid x:Name="PART_Grid" ClipToBounds="True">
                        <Rectangle x:Name="PART_PaintArea" Panel.ZIndex="0"/>
                        <ContentPresenter x:Name="PART_MainContent" Content="{TemplateBinding Content}" Panel.ZIndex="1" Margin="60,0,60,0"/>
                        <Rectangle x:Name="Dummy" Panel.ZIndex="0" IsHitTestVisible="False" Opacity="0"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <effects:FeatheringEffect FeatheringRadius="5" TexHeight="{Binding ActualHeight, ElementName=PART_Grid}" TexWidth="{Binding ActualWidth, ElementName=PART_Grid}"/>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dc="clr-namespace:Digimezzo.WPFControls;assembly=Digimezzo.WPFControls">

    <Style x:Key="MainMenuPivotItemStyle" TargetType="{x:Type dc:PivotItem}">
        <!--<Setter Property="Padding" Value="20,8,20,8"/>-->
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HeaderFontSize" Value="11"/>
    </Style>

    <Style x:Key="SubMenuPivotItemStyle" TargetType="{x:Type dc:PivotItem}">
        <!--<Setter Property="Padding" Value="20,8,20,8"/>-->
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="HeaderFontSize" Value="24"/>
    </Style>
</ResourceDictionary>
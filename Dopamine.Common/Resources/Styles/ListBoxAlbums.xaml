    <Style x:Key="Genres_ListBoxAlbumsItem" TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource ListBoxAlbumsItem}">
        <Setter Property="ContextMenu" Value="{StaticResource Genres_ListBoxAlbumsContextMenu}"/>

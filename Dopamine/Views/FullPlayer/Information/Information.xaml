<UserControl x:Class="Dopamine.Views.FullPlayer.Information.Information"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dc="clr-namespace:Digimezzo.WPFControls;assembly=Digimezzo.WPFControls"
             xmlns:informationviews="clr-namespace:Dopamine.Views.FullPlayer.Information"
             xmlns:commonviews="clr-namespace:Dopamine.Common.Presentation.Views;assembly=Dopamine.Common"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <dc:Pivot HeaderMargin="85,0,0,0">
        <dc:Pivot.CommonContent>
            <commonviews:Status/>
        </dc:Pivot.CommonContent>
        <dc:PivotItem Header="{DynamicResource Language_Help}" Style="{StaticResource SubMenuPivotItemStyle}">
            <informationviews:InformationHelp/>
        </dc:PivotItem>
        <dc:PivotItem Header="{DynamicResource Language_About}" Style="{StaticResource SubMenuPivotItemStyle}">
            <informationviews:InformationAbout/>
        </dc:PivotItem>
    </dc:Pivot>
</UserControl>

<UserControl x:Class="Dopamine.CollectionModule.Views.CollectionTracksColumns"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dopamine.CollectionModule.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             xmlns:prism="http://www.codeplex.com/prism"
             xmlns:prismMvvm="clr-namespace:Prism.Mvvm;assembly=Prism.Wpf"
             prismMvvm:ViewModelLocator.AutoWireViewModel="False">

    <StackPanel>
        <CheckBox Style="{StaticResource MetroCheckBox}" Margin="0,10,0,0" Content="{DynamicResource Language_Rating}" IsChecked="{Binding CheckBoxRatingChecked}" Visibility="{Binding CheckBoxRatingVisible,Converter={StaticResource BooleanToCollapsedConverter}}"/>
        <CheckBox Style="{StaticResource MetroCheckBox}" Margin="0,10,0,0" Content="{DynamicResource Language_Artist}" IsChecked="{Binding CheckBoxArtistChecked}"/>
        <CheckBox Style="{StaticResource MetroCheckBox}" Margin="0,10,0,0" Content="{DynamicResource Language_Album}" IsChecked="{Binding CheckBoxAlbumChecked}"/>
        <CheckBox Style="{StaticResource MetroCheckBox}" Margin="0,10,0,0" Content="{DynamicResource Language_Genre}" IsChecked="{Binding CheckBoxGenreChecked}"/>
        <CheckBox Style="{StaticResource MetroCheckBox}" Margin="0,10,0,0" Content="{DynamicResource Language_Length}" IsChecked="{Binding CheckBoxLengthChecked}"/>
        <CheckBox Style="{StaticResource MetroCheckBox}" Margin="0,10,0,0" Content="{DynamicResource Language_Album_Artist}" IsChecked="{Binding CheckBoxAlbumArtistChecked}"/>
        <CheckBox Style="{StaticResource MetroCheckBox}" Margin="0,10,0,0" Content="{DynamicResource Language_Track_Number}" IsChecked="{Binding CheckBoxTrackNumberChecked}"/>
        <CheckBox Style="{StaticResource MetroCheckBox}" Margin="0,10,0,0" Content="{DynamicResource Language_Year}" IsChecked="{Binding CheckBoxYearChecked}"/>
        <CheckBox Style="{StaticResource MetroCheckBox}" Margin="0,10,0,0" Content="{DynamicResource Language_Bitrate}" IsChecked="{Binding CheckBoxBitrateChecked}"/>
    </StackPanel>
</UserControl>
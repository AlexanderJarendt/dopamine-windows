<UserControl x:Class="Dopamine.OobeModule.Views.OobeDownloadAlbumCovers"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dopamine.OobeModule.Views"
             xmlns:myCoreBase="clr-namespace:Dopamine.Core.Base;assembly=Dopamine.Core"
             xmlns:mySettingsModuleViews="clr-namespace:Dopamine.SettingsModule.Views;assembly=Dopamine.SettingsModule"
             xmlns:prismMvvm="clr-namespace:Prism.Mvvm;assembly=Prism.Wpf"
             prismMvvm:ViewModelLocator.AutoWireViewModel="True">

    <StackPanel Margin="30,0,30,0">
        <Label Padding="0" Content="{DynamicResource Language_Album_Covers}" FontSize="{Binding Source={x:Static myCoreBase:Constants.OobeTitleFontSize}}" FontWeight="Light" Foreground="{DynamicResource RG_AccentBrush}"/>
        <TextBlock Margin="0,5,0,0" Text="{DynamicResource Language_Automatically_Download_Missing_Album_Covers}" FontWeight="Light" FontSize="{Binding Source={x:Static myCoreBase:Constants.OobeTextFontSize}}" Foreground="{DynamicResource RG_ForegroundBrush}" TextWrapping="Wrap"/>
        <mySettingsModuleViews:SettingsOnlineDownloadAlbumCovers Margin="0,15,0,0"/>
    </StackPanel>
</UserControl>
